<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:model="clr-namespace:RankingApp.Models"
             xmlns:viewmodel="clr-namespace:RankingApp.ViewModels"
             x:DataType="viewmodel:PlayerViewModel"
             x:Class="RankingApp.Views.AllPlayerRanking"
             Title="Players Ranking"
             Style="{StaticResource PrimaryContentPage}">
    <StackLayout BackgroundColor="{AppThemeBinding Light={StaticResource LBlue}, Dark={StaticResource Gray900}}">
        <ImageButton Style="{StaticResource PrimaryImageButton}" Source="plusnoborder.png" Clicked="ImageButton_Clicked"></ImageButton>
        <Label 
            Text="Players Ranking" 
            FontSize="Title" 
            TextColor="{AppThemeBinding Light={StaticResource Gray900}, Dark={StaticResource Gray200}}"
            HorizontalOptions="Center"/>
        <SearchBar
            x:Name="AllPlayerSearchBar"
            Placeholder="Search Player"
            TextChanged="AllPlayerSearchBar_OnTextChanged"
            BackgroundColor="{AppThemeBinding Light={StaticResource LBlue}, Dark={StaticResource Gray900}}"
            TextColor="{AppThemeBinding Light={StaticResource Gray900}, Dark={StaticResource Gray200}}"></SearchBar>
        <ListView 
            x:Name="ListViewPlayers"
            BackgroundColor="{AppThemeBinding Light={StaticResource LBlue}, Dark={StaticResource Gray900}}"
            ItemsSource="{Binding Players}">
            <ListView.ItemTemplate>
                <DataTemplate x:DataType="model:PlayerDB">
                    <ViewCell>
                        <HorizontalStackLayout Spacing="10" Padding="5">
                            <Label 
                                Text ="{Binding AllDisplay}" 
                                TextColor="{AppThemeBinding Light={StaticResource Gray900}, Dark={StaticResource Gray200}}"
                                FontSize="18"
                                FontAttributes="Bold"
                                VerticalTextAlignment="Center"
                                HorizontalTextAlignment="Center"></Label>
                            <Label 
                                    Text ="{Binding Points}" 
                                    TextColor="{AppThemeBinding Light={StaticResource Gray900}, Dark={StaticResource Gray200}}"
                                    FontSize="16"
                                    VerticalTextAlignment="Center"
                                    HorizontalTextAlignment="Center"></Label>
                            <Label 
                                    Text ="{Binding PointsWithBonus}" 
                                    TextColor="{AppThemeBinding Light={StaticResource Gray900}, Dark={StaticResource Gray200}}"
                                    FontSize="16"
                                    VerticalTextAlignment="Center"
                                    HorizontalTextAlignment="Center"></Label>
                        </HorizontalStackLayout>
                    </ViewCell>
                </DataTemplate>
            </ListView.ItemTemplate>
        </ListView>
    </StackLayout>
</ContentPage>