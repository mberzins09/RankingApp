<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="RankingApp.Views.MensRanking"
             Title="MensRanking">
    <StackLayout>
        <Label Text="Ranking" FontSize="Title"/>
        <ListView ItemsSource="{Binding Mens}">
            <ListView.ItemTemplate>
                <DataTemplate>
                    <TextCell
                        Text ="{Binding Name}"
                        Detail="{Binding Points}"></TextCell>
                </DataTemplate>
            </ListView.ItemTemplate>
        </ListView>
    </StackLayout>
</ContentPage>